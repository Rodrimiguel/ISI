@using Instituto1.ViewModels;

@model CursoViewModel;

@{
    ViewData["Title"] = "Index";
}

<h1>Cursos</h1>
<br>
<div class="row">
    <form method="get" asp-action="Index" asp-controller="Curso">
        <div>
            <input class="form-control" asp-for="NameFilter">
        </div>
        <button class="btn" type="submit">Buscar</button>
    </form>
</div>
<br>
<br>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cursos[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cursos[0].Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cursos[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Cursos) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
