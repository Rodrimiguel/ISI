@using Instituto1.ViewModels;

@model CursoViewModel;

@{
    ViewData["Title"] = "Index";
}

<h2>CURSOS</h2>

<div class="row">
    <form method="get" asp-action="Index" asp-controller="Curso">
        <div>
            <input class="form-control" asp-for="NameFilter">
        </div>
        <button class="btn" type="submit">Buscar</button>
    </form>
</div>
<br>
<br>

<p>
    <a asp-action="Create">CREAR CURSO</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cursos[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cursos[0].Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cursos[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cursos[0].Credits)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Cursos) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credits)
            </td>
            <td>
                <button type="button" class="btn btn-secondary"><a asp-action="Edit" asp-route-id="@item.Id">Editar</a></button> 
                <button type="button" class="btn btn-info"><a asp-action="Details" asp-route-id="@item.Id">Detalles</a></button>
                <button type="button" class="btn btn-danger"><a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a></button>
            </td>
        </tr>
}
    </tbody>
</table>

<!DOCTYPE html>
<html>
<head>
    <link rel="icon">
    <title>Images</title>
    <style>
        body {
            height: 100vh;
            background-image: url("https://img.freepik.com/premium-vector/abstract-white-background_476151-599.jpg");
            color:white;
            padding: 10px;
            background-position: auto;
            background-size: cover ;
            background-position: fixed;
            background-repeat: no-repeat;
        }
    </style>
</head>
</html>